{
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true
    },
    "atom": {
        "formatOnSave": true
    },
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "out": "app.js",
        "noImplicitAny": true
    },
    "files": [
        "./src/Main.ts",
        "./src/GameUX.ts",
        "./src/Player.ts",
        "./src/ResourcePool.ts",
        "./src/Enemy.ts",

        "./assets/pixi.d.ts",
        "./assets/p2.d.ts",
        "./assets/phaser.d.ts"
    ]
}
